<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#880f0f10"
                android:centerColor="#880d0d0f"
                android:endColor="#885d5d5e"/>
            <stroke
                android:width="1dp"
                android:color="@color/background_btn" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/background_btn"
                android:startColor="@color/background_btn"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/background_btn" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/background_btn"
                android:startColor="@color/background_btn"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/background_btn" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
</selector>